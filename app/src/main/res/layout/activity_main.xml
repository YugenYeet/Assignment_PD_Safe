<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Im_PD_Safe_Logo"
        android:layout_width="343dp"
        android:layout_height="223dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/pd_scan_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bt_Emergency_Contact"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Emergency Contacts"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Im_PD_Safe_Logo" />

    <Button
        android:id="@+id/Bt_Basic_First_Aid"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Basic First-Aid"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Im_PD_Safe_Logo" />

    <Button
        android:id="@+id/Bt_Personal_Info"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:text="Personal Information"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Tv_Copyright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Im_PD_Safe_Logo" />

    <TextView
        android:id="@+id/Tv_Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Project Dayak Â© 2021"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/Im_Project_Dayak_Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Im_Project_Dayak_Logo"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/project_dayak_screenshot" />

</androidx.constraintlayout.widget.ConstraintLayout>